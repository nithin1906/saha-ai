# SAHA-AI Production Environment Variables
# Copy this to your deployment platform's environment variables section

# Django Core Settings
SECRET_KEY=django-insecure-your-super-secret-key-change-this-in-production-make-it-long-and-random
DEBUG=False
ALLOWED_HOSTS=your-app-name.railway.app,your-app-name.onrender.com,your-domain.com

# Database (Auto-configured by platform)
DATABASE_URL=postgresql://user:password@host:port/database

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Email Settings (Optional)
EMAIL_HOST_USER=your-gmail@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password
DEFAULT_FROM_EMAIL=SAHA-AI <noreply@saha-ai.com>

# CORS Settings
CORS_ALLOWED_ORIGINS=https://your-app-name.railway.app,https://your-app-name.onrender.com

# Redis Cache (Optional)
REDIS_URL=redis://localhost:6379/1

# API Keys for Stock Data
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
IEX_CLOUD_API_KEY=your-iex-cloud-api-key
YAHOO_FINANCE_API_KEY=your-yahoo-api-key
MFAPI_KEY=your-mfapi-key