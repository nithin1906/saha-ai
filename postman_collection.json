		{
			"name": "Market Data",
			"item": [
				{
					"name": "Market Snapshot",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/advisor/market/snapshot/",
							"host": ["{{base_url}}"],
							"path": ["advisor", "market", "snapshot", ""]
						},
						"description": "Get current market indices (NIFTY, SENSEX, etc.)"
					}
				},
				{
					"name": "Stock Search - NSE",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/advisor/search/NSE/{{stock_query}}",
							"host": ["{{base_url}}"],
							"path": ["advisor", "search", "NSE", "{{stock_query}}"]
						},
						"description": "Search for stocks on NSE exchange"
					}
				},
				{
					"name": "Stock Search - BSE",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/advisor/search/BSE/{{stock_query}}",
							"host": ["{{base_url}}"],
							"path": ["advisor", "search", "BSE", "{{stock_query}}"]
						},
						"description": "Search for stocks on BSE exchange"
					}
				},
				{
					"name": "Stock Analysis",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/advisor/analyze/{{ticker}}/{{buy_price}}/{{shares}}",
							"host": ["{{base_url}}"],
							"path": ["advisor", "analyze", "{{ticker}}", "{{buy_price}}", "{{shares}}"]
						},
						"description": "Analyze a stock with buy price and shares"
					}
				},
				{
					"name": "Stock History",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/advisor/history/{{ticker}}/?period=1y",
							"host": ["{{base_url}}"],
							"path": ["advisor", "history", "{{ticker}}", ""],
